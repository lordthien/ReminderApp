<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    android:backgroundTint="#ffffff"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="15dp">
        <RelativeLayout
            android:id="@+id/bg"
            android:layout_width="30dp"
            android:layout_height="44dp"
            android:background="@drawable/user_bg">
            <TextView
                android:id="@+id/getFirstCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="A"></TextView>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_memberphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/bg"
            android:text="This is demo"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/tv_namegrouptask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/bg"
            android:text="This is demo"
            android:textColor="#000000"
            android:layout_below="@+id/tv_memberphone"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_namehost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/bg"
            android:text="This is demo"
            android:textColor="#000000"
            android:layout_below="@+id/tv_namegrouptask"
            android:textSize="15dp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
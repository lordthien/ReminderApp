<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string name="navigation_drawer_open" translatable="false">open navigation drawer</string>
    <string name="navigation_drawer_close" translatable="false">close navigation drawer</string>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="android:windowActionBar">false</item>

    </style>

    <style name="Autocomplete">
        <item name="colorControlNormal">#F0F5F9</item>
        <item name="colorControlActivated">#F0F5F9</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="CustomStyle" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary_lightest</item>
        <item name="colorPrimaryDark">@color/primary_lightest</item>
        <!--color of thumb when inactive-->
        <item name="colorSwitchThumbNormal">@color/grey300</item>
        <!--Inactive track color-->
        <item name="android:colorForeground">@color/grey600</item>

    </style>

    <!--<style name="AnotherCustomStyle" parent="Theme.AppCompat.Light.NoActionBar">-->
